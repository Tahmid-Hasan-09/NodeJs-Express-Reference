<%- include('../partials/header.ejs')  %> 

<div class="container">
    <h1 class="text-center">Add New Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Enter Comment" name="comment[text]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Author" name="comment[author]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    
</div>


<%- include('../partials/footer.ejs')  %> 